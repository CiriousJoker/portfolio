{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["format", ".", "--line-length", "120"],
      "group": "none",
      "problemMatcher": [],
      "label": "Format code",
      "detail": "Discard any changes to .g.dart files."
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "run", "build_runner", "build", "--delete-conflicting-outputs"],
      "group": "none",
      "problemMatcher": [],
      "label": "Run build_runner",
      "detail": "Generates and overwrites all .g.dart files."
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["run", "-d", "chrome", "--release", "--web-renderer", "canvaskit"],
      "group": "none",
      "problemMatcher": [],
      "label": "Test release",
      "detail": "Runs in release mode with canvaskit. Use regular debugger during development."
    }
  ]
}
